@model Nop.Plugin.Payments.PayPing.Models.ConfigurationModel
@inject Nop.Core.IWebHelper webHelper
@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")


<form asp-controller="PaymentPayPing" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="PPToken_OverrideForStore" asp-input="PPToken" asp-store-scope="@Model.ActiveStoreScopeConfiguration"/>
                        <nop-label asp-for="PPToken"/>
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="PPToken"/>
                        <span asp-validation-for="PPToken"></span>
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="ReturnUrl_OverrideForStore" asp-input="ReturnUrl" asp-store-scope="@Model.ActiveStoreScopeConfiguration"/>
                        <nop-label asp-for="ReturnUrl"/>
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ReturnUrl"/>
                        <span asp-validation-for="ReturnUrl"></span>
                    </div>

                </div>
                    <div class="form-group">
                                    <div class="col-md-3">
                                        <nop-override-store-checkbox asp-for="IsRial_OverrideForStore" asp-input="IsRial" asp-store-scope="@Model.ActiveStoreScopeConfiguration"/>
                                        <nop-label asp-for="IsRial"/>
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="IsRial"/>
                                        <span asp-validation-for="IsRial"></span>
                                    </div>
                
                                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>